@model StrawmanApp.Models.FormUtilModel.InputModel
@if (Model.type != StrawmanApp.Models.FormUtilModel.InputTypes.HIDDEN)
{
    if (Model.label != null) { @Html.LabelFor(m => Model, Model.label, null) }
    object htmlAttributes = new { @class = "form-control", @Value = string.IsNullOrEmpty(Model.defalut_value) ? "" : Model.defalut_value, @data_type = Model.data_attributes };
    if (Model.disabled != null) { htmlAttributes = new { @class = "form-control", @Value = string.IsNullOrEmpty(Model.defalut_value) ? "" : Model.defalut_value, @data_type = Model.data_attributes, @disabled = Model.disabled }; }
    @Html.TextBoxFor(m => Model.all[Model.id], htmlAttributes)   

}else{
    
    @Html.HiddenFor(m => Model.all[Model.id], new { @Value = Model.defalut_value == null ? "" : Model.defalut_value, @data_type = Model.data_attributes, @for = Model._for });
}
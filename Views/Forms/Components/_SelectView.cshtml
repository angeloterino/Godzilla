@model StrawmanApp.Models.FormUtilModel.SelectModel
@if (Model.label != null) { @Html.LabelFor(m => Model, Model.label, null) }
@*@{
    foreach (StrawmanApp.Models.FormUtilModel.OptionModel option in Model.options)
    {
        opts.Add(new SelectListItem(){ Text = option.text, Value = option.value});
    }
} *@
@{
    object htmlAttributes = new { @class = "form-control", @data_type = Html.Raw(Model.data_attributes), @data_target = Html.Raw(Model.data_target), @for = Model._for};
    if(Model.disabled != null){ htmlAttributes = new { @class = "form-control", @data_type = Html.Raw(Model.data_attributes), @data_target = Html.Raw(Model.data_target),@for=Model._for, @disabled= Model.disabled };}
}
@Html.DropDownListFor(m => Model.all[Model.id], Model.options, htmlAttributes)
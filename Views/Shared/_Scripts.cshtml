@{string menUrl = ViewData["menuUrl"].ToString();
  string contentUrl = "~/Scripts/custom" + menUrl + ".js";
  switch (menUrl)
  {
      case "StrawmanApp":
          { 
            <script src="@Url.Content("~/Scripts/custom.js")"></script>
          }
          break;
      case "BoyMassMarket":
      case "BoyBeauty":
      case "BoyOTC":
          {
            @Scripts.Render("~/bundles/jqueryval");
            @Scripts.Render("~/bundles/comments");
            <script src="@Url.Content("~/Scripts/customBOY.js")"></script>
              Html.RenderAction("CheckPermissions", "Config", new { view = StrawmanApp.Helpers.StrawmanViews.BOY.id });
          }
          break;
      case "BOYJJByChannel":
          {
            @Scripts.Render("~/bundles/jqueryval");
            @Scripts.Render("~/bundles/comments");
            Html.RenderAction("CheckPermissions", "Config", new { view = StrawmanApp.Helpers.StrawmanViews.BOYBYCHANNEL.id });
            <script src="@Url.Content(contentUrl)"></script>
          }
          break;
      case "ChartBOYChannel":
      case "ChartJJVInternal":
          {
              <script src="@Url.Content("~/Scripts/table.utils/jquery.table2excel.js")"></script>
              <script src="@Url.Content(contentUrl)"></script>  
          }
          break;
      case "ChartByChannelView":
          { 
              <script src="@Url.Content("~/Scripts/table.utils/jquery.table2excel.js")"></script>
              <script src="@Url.Content("~/Scripts/customCharts.js")"></script>
          }
          break;
      case "Forms":
      case "BOYConfigure":
      case "CommentsForm":
      case "LettersForm":
          {
            @Scripts.Render("~/bundles/jqueryval");
            Html.RenderAction("CheckPermissions", "Config", new { view = StrawmanApp.Helpers.StrawmanViews.MONTHLY_COMMENTS.id });
            <script src="@Url.Content("~/Scripts/customForms.js")"></script>

          }
          break;

      case "ManagementLetter": 
      case "MonthlyComments":
          {
               @Scripts.Render("~/bundles/jqueryval");
                Html.RenderAction("CheckPermissions", "Config", new { view = StrawmanApp.Helpers.StrawmanViews.MONTHLY_COMMENTS.id });
                <script src="@Url.Content(contentUrl)"></script>
          }
          break;
      case "Config":
      case "GroupsConfig":
      case "UserManagment":
      case "BOYConfig":
      case "DataConfig":
          {
               @Scripts.Render("~/bundles/jqueryval");
               @Scripts.Render("~/bundles/jqueryui");
               <script src="@Url.Content(contentUrl)"></script>      
          }
          break;
    case "KPI":
          {
              <script src="@Url.Content(contentUrl)"></script>
              Html.RenderAction("CheckPermissions", "Config", new { view = StrawmanApp.Helpers.StrawmanViews.KPI.id });
          }
          break;
          default:
          {
            <script src="@Url.Content(contentUrl)"></script>      
          }
          break;
  }
  if(menUrl!="LoaderView"){
    <script src="@Url.Content("~/Scripts/combo/period.js")"></script>
  }
}
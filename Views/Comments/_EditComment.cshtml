@model StrawmanApp.Models.FormUtilModel.TextArea
@using (Ajax.BeginForm("InsertComment", new AjaxOptions
{
    HttpMethod = "POST"
 ,
    OnSuccess = "UpdateCommentSuccess('" + StrawmanApp.Helpers.Messages.Success("Comentario") + "')"
 ,
    OnFailure = "UpdateCommentFailure('" + StrawmanApp.Helpers.Messages.Failure("Comentario") + "')"
 ,
    OnBegin = "FormatEditorContent"
}))
{
    string partial_view = ViewBag.PartialView == null?"~/Views/Forms/Components/_TextAreaView.cshtml":ViewBag.PartialView;
    
    @Html.EditorFor(m => m.comment, new { rows = 12, @class = "panel panel-default", @data_type = Model.data_attributes, @style= "width:100%" });
    @Html.HiddenFor(m => m.data_attributes);
    @Html.HiddenFor(m => m.group);
    @Html.HiddenFor(m => m.channel);
    @Html.HiddenFor(m => m.brand);
    @Html.HiddenFor(m => m.market);
    @Html.HiddenFor(m => m.name);
    @Html.HiddenFor(m => m.source);
    if (Model.comment_id != null && int.Parse(Model.comment_id) > 0){ @Html.HiddenFor(m => m.comment_id); }
    if (Model.letter_id != null && int.Parse(Model.letter_id) > 0){ @Html.HiddenFor(m => m.letter_id); }
    <input type="submit" class="btn btn-default float-right" value="@ViewBag.BtnSubmitText" style="display:none" />
}
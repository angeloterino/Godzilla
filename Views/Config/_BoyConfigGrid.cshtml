@model List<StrawmanApp.Models.MasterDataModels>
@using GridMvc.Html;    
@Html.Grid((List<StrawmanApp.Models.MasterDataModels>)Model).Columns(columns =>
           {
                columns.Add(foo => foo.channel_name).Titled("CHANNEL").Sortable(true);
                columns.Add(foo => foo.brand_name).Titled("MARKET/BRAND").Sortable(true);
                columns.Add(foo => foo.nts_name).Titled("NAME").Sortable(true);
                columns.Add(foo => foo.order).Titled("ORDER").Sortable(true);
                columns.Add(foo => foo.market_calc_name).Titled("MARKET CALC").Sortable(true);
                columns.Add(foo => foo.brand_calc_name).Titled("SELLOUT CALC").Sortable(true);
                columns.Add(foo => foo.nts_calc_name).Titled("SELLIN CALC").Sortable(true);
                columns.Add(foo => foo.config_name).Titled("CONSOLIDE").Sortable(true);
                columns.Add().Encoded(false).Sanitized(false).SetWidth("5%").RenderValueAs(o => 
                @<div>
                    <button class="btn btn-success" type="button" data-type="edit" data-target-market="@o.market" data-target-brand="@o.brand" data-target-channel="@o.channel"><li class="fa fa-edit"></li></button>
                    <!--<button class="btn @o.active_class" type="button" data-type="view" data-target-market="@o.market" data-target-brand="@o.brand" data-target-channel="@o.channel"><li class="fa fa-power-off"></li></button>-->
                </div>);
    }).Selectable(false).WithPaging(15)
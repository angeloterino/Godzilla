@model List<StrawmanApp.Models.MasterDataModels>
@using GridMvc.Html;    
@{string _button = "<button type=\"button\" data-type=\"new\" data-modal=\"modal\" data-controller=\"AddItemConfig\" data-source=\""+ ViewBag.Group + "\" class=\"btn btn-default\" style=\"font-weight:bold;color:white;\">Add</button>";}
@Html.Grid((List<StrawmanApp.Models.MasterDataModels>)Model).Columns(columns =>
           {
                columns.Add(foo => foo.brand_name).Titled("NAME").Sortable(true);
                columns.Add(foo => foo.config_name).Titled("CONFIG").Sortable(true);
                columns.Add(foo => foo.source).Titled("SOURCE").Sortable(true);
                columns.Add().Encoded(false).Sanitized(false).SetWidth(30).Titled(_button).RenderValueAs(o => @<button type="button" data-type="edit" data-target-id="@o.id" data-controller="GetEditForGroupConfig" class="btn btn-default">Edit</button>);
    }).WithPaging(20)
